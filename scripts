#!/bin/bash
echo "🔧 Setting up environment..."
chmod +x scripts/*.sh
echo "✅ Setup complete!"

#!/bin/bash
if [ -z "$1" ]; then
  echo "❌ Please provide a template (react | nextjs | node | python)"
  exit 1
fi

cd templates/$1-app || { echo "❌ Template not found"; exit 1; }
docker-compose up --build

#!/bin/bash
echo "🌐 Choose a template to run:"
select choice in "react-app" "nextjs-app" "node-api" "python-api"; do
  case $choice in
    "react-app"|"nextjs-app"|"node-api"|"python-api")
      echo "🚀 Running $choice ..."
      ./scripts/run.sh $choice
      break
      ;;
    *)
      echo "❌ Invalid choice"
      ;;
  esac
done
